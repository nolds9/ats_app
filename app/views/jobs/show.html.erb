<p id="notice"><%= notice %></p>
<h1><%= @job.name %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= link_to profile.first_name, job_profile_path(@job, profile) %> <%= link_to profile.last_name, job_profile_path(@job, profile) %></td>
        <td><%= profile.current_company %></td>
        <td><%= profile.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "Add a new candidate", new_job_profile_path(@job)%></p>
<p><%= link_to 'Share candidates with hiring manager' %></p>
<%= link_to 'Back', jobs_path %>
